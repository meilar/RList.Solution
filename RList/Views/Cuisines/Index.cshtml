@{
  Layout = "_Layout";
}

@using RList.Models;

<h1>Cuisines</h1>

@if (@Model.Count == 0)
{
  <h3>No cuisines have been added ...yet! Please add a cuisine</h3>
  <p>@Html.ActionLink("Add cuisine", "Create", "Cuisines")</p>
}

<ul>
  @foreach (Cuisine cuisine in Model)
  {
    <li>@Html.ActionLink($"{cuisine.Name}", "Details", new { id = cuisine.CuisineId })</li>
  }
  